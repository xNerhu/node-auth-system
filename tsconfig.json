{
  "compilerOptions": {
    "outDir": "./build/",

    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "esnext"],
    "experimentalDecorators": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,

    "baseUrl": "./",

    "paths": {
      "@client/*": ["src/client/*"],
      "@server/*": ["src/server/*"],
      "@shared/*": ["src/shared/*"],
      "~/*": ["src/*"]
    }
  },
  "exclude": ["node_modules"]
}
